{
	"extends": "../../config/typescript/base.json",
	"compilerOptions": {
		"moduleResolution": "Node",
		"rootDirs": [
			"./src"
		],
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"incremental": true,
		"baseUrl": "."
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}