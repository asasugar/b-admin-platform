{
	"name": "b-admin-platform",
	"version": "0.0.1",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"prepare": "husky install",
		"stop": "tsx scripts/stop-ports.ts",
		"dev:app": "pnpm stop && dotenv -- sh -c 'cross-env NODE_ENV=development turbo run dev --filter @b-admin-platform/backend --filter \"@b-admin-platform/frontend/$APP\"'",
		"dev:apps": "pnpm stop && cross-env NODE_ENV=development turbo run dev --filter @b-admin-platform/backend --filter \"@b-admin-platform/frontend/*\"",
		"build:app": "dotenv -- sh -c 'turbo run build --filter \"@b-admin-platform/frontend/$APP\"'",
		"start:local": "pnpm publish:build && cross-env NODE_ENV=production turbo run start --filter @b-admin-platform/backend",
		"start:prod": "cross-env NODE_ENV=production turbo run start --filter @b-admin-platform/backend",
		"clean": "turbo run clean && rm -rf node_modules",
		"clean:store": "pnpm store prune",
		"format": "pnpm exec turbo run format --force",
		"lint": "pnpm exec turbo run lint --force",
		"check": "pnpm exec turbo run check --force",
		"publish:build": "turbo run build:deps",
		"publish:add": "pnpm changeset add",
		"publish:alpha": "pnpm changeset pre enter alpha",
		"publish:beta": "pnpm changeset pre enter beta",
		"publish:rc": "pnpm changeset pre enter rc",
		"publish:version": "pnpm changeset version",
		"publish:all": "pnpm changeset publish"
	},
	"devDependencies": {
		"@b-admin-platform/build-utils": "workspace:^",
		"@biomejs/biome": "^2.2.0",
		"@changesets/cli": "^2.29.5",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@rsbuild/core": "^1.4.16",
		"@rsbuild/plugin-less": "^1.4.0",
		"@rsbuild/plugin-vue": "^1.1.2",
		"@rsbuild/plugin-vue-jsx": "^1.1.1",
		"@types/node": "^24.0.12",
		"@types/react": "^19.1.0",
		"@types/react-dom": "^19.1.7",
		"cross-env": "^7.0.3",
		"deepmerge": "^4.3.1",
		"dotenv": "^17.2.0",
		"dotenv-cli": "^8.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.2",
		"tsup": "^8.5.0",
		"turbo": "^2.5.6",
		"typescript": "^5.8.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"apps/**/*.{ts,tsx}": [
			"pnpm format",
			"git add ."
		]
	},
	"engines": {
		"node": ">=16.0.0",
		"pnpm": ">=8.0.0"
	}
}