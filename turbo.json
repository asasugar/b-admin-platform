{
	"$schema": "https://turbo.build/schema.json",
	"dangerouslyDisablePackageManagerCheck": true,
	"globalDependencies": [".env", ".env.local", "config/env/.env.*"],
	"globalEnv": [
		"APP",
		"NODE_ENV",
		"BACKEND_PORT"
	],
	"ui": "tui",
	"concurrency": "10",
	"tasks": {
		"dev:deps": {
			"cache": false,
			"persistent": true
		},
		"dev": {
			"with": [
				"@b-admin-platform/utils#dev:deps",
				"@b-admin-platform/services#dev:deps",
				"@b-admin-platform/hooks#dev:deps"
			],
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		},
		"build": {
			"cache": true,
			"dependsOn": [
				"^build:deps",
				"^build"
			],
			"outputs": [
				"dist/**",
				"../../apps/**"
			],
			"outputLogs": "full"
		},
		"build:deps": {
			"dependsOn": [
				"^build:deps"
			],
			"outputs": [
				"dist/**"
			],
			"outputLogs": "full"
		},
		"format": {
			"cache": false,
			"inputs": ["src/**/*"],
			"outputs": []
		},
		"check": {
			"cache": false,
			"inputs": ["src/**/*"],
			"outputs": []
		},
		"lint": {
			"cache": false,
			"inputs": ["src/**/*"],
			"outputs": []
		},
		"start": {
			"cache": false,
			"dependsOn": [
				"build"
			]
		}
	}
}